{
  "name": "skunkworks-academy",
  "version": "1.0.0",
  "description": "Static site for Skunkworks Academy",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "parcel build index.html --dist-dir dist",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:styles": "stylelint 'src/**/*.{scss,css}' --report-needless-disables --report-invalid-scope-disables --allow-empty-input",
    "test": "jest",
    "clean": "rimraf dist node_modules",
    "start": "parcel index.html --open",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,scss,css,md}'"
  },
  "dependencies": {
    "parcel": "^2.8.3",
    "sass": "^1.62.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-export-default-from": "^7.24.7",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/runtime": "^7.24.7",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.4.3",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-config-airbnb": "^19.0.4",
    "jest": "^28.1.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^29.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "import/no-unresolved": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=18.x"
  }
}
